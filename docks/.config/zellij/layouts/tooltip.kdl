layout {
    pane
    pane size=2 borderless=true {
        plugin location="zellij:status-bar"
    }
}
keybinds {
    normal {
        unbind "Ctrl g"
        bind "Ctrl l" { SwitchToMode "locked"; }
    }
    locked {
        unbind "Ctrl g"
        bind "Ctrl l" { SwitchToMode "normal"; }
    }
}
